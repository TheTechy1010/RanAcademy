@model IEnumerable<RanAcademy.Models.StudentCourse>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-responsive-sm">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Student.FullName)
    </td>
    <td>
        <a href="/StudentCourses/Details/@item.Id">
            <img style="height:50px;width:50px;" src="@item.Course.Thumbnail" />
            <h6>@item.Course.Name</h6>
        </a>

    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
