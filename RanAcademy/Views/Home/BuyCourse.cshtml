@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Buy Course</h4>
    <hr />
    @Html.ValidationSummary("",new { @class = "text-danger" })


    <div class="form-group">
        @Html.Label("Student", "Student", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CatagoryId", (ViewBag.Students as SelectList), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessage("CatagoryId", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Course", "Course", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CatagoryId", (ViewBag.Courses as SelectList), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessage("Course", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
